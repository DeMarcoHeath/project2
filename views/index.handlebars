    <div class="jumbotron">
        <h1 id="color-override">PedalPals</h1>
        <p id="color-override">PedalPals is a bike sharing platform that lets you share your bike members of our exclusive community.</p>
        <br>
            <h2 id="color-override">List a Bike</h2>
            <panel>
                <form class="create-form">
                    <div class="form-group">
                        <label for="newburger" id="color-override">New Bikes:</label>
                        <input type="text" id="newburger" name="burger">
                            {{ !-- Create a button in index.handlebars that will submit the user input into the database. -- }}
                            <button type="submit" class="btn btn-dark" id="addburger">
                                <span class="fa fa-thumbs-up"></span>
                            </button>
                        </div>
                    </form>
                </panel>
            </div>
            <!-- /jumbotron -->

            <div
                class="row">
                <!-- Undevoured Burgers -->
                <div class="col-sm-6">
                    <div class="panel panel-default">
                        <div class="panel-heading" id="lefthead">
                            <strong>Available Bikes</strong>
                        </div>
                        <div class="panel-body">
                            <ul>
                                {{#each burgers}}
                                    {{#unless devoured}}
                                        <span>
                                            <strong>
                                                {{ this.id }}
                                                -
                                                {{ this.burger_name }}
                                            </strong>
                                        </span>
                                        <button type="button" class="eatburger btn btn-dark" id="eatbutton" data-id="{{ this.id }}" data-newDevoured="{{ devour }}">
                                            <span class="fa fa-thumbs-up"></span>
                                        </button>
                                        <hr>
                                        {{/unless}}
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- Devoured Burgers -->
                    <div class="col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-heading" id="righthead">
                                <strong>Checked Out Bikes</strong>
                            </div>
                            <div class="panel-body">
                                <ul>
                                    {{#each burgers}}
                                        {{#if devoured}}
                                            <span>
                                                <strong>
                                                    {{ this.id }}
                                                    -
                                                    {{ this.burger_name }}
                                                </strong>
                                            </span>
                                            <button type="button" class="trashburger btn btn-dark" id="trashbutton" data-id="{{ this.id }}" data-newDevoured="{{ devour }}">
                                                <span class="fas fa-undo-alt"></span>
                                            </button>
                                            <hr>
                                            {{/if}}
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /row -->

                </div>
                <!-- /container -->
